<div class="blog ">
	<div class="intro">
	<h2>Blog</h2>

		<div class="blogHeader">
			<button type="button" class="btn btn-primary rightAligned" data-toggle="modal" data-target="#new-blog-modal"> <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add a new Post</button>
		</div>
		<% @blog.each do |b| %>
			<div class="blogPost" id="<%= b.id %>">
				
	  			<h3><input type="text" name="title" class="form-control titleInput" id="" style="display:none;" value="<%= b.title %>" required><span class="titleSpan"><%= b.title %></span></h3>
	  			
	  			<div id="<%= b.id %>" class="blogButtons">
		  			<button type="button" class="btn btn-primary btn-sm editButton"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit</button>


					<%= link_to(blog_path(b), method: :delete, class: 'btn btn-danger btn-sm deleteButton') do %>
						<span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Delete
					<%- end %>
					
					<button type="button" class="btn btn-primary btn-sm postButton" style="display:none;"><span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Save</button>
				</div>
	  			<div class="panel panel-default">
	    			<div class=" panel-heading userName" ><span class="glyphicon glyphicon-user userName" aria-hidden="true"></span> <%= b.username %></div>
	    			<div class="panel-body bodyText transparent"><textarea class="form-control bodyInput" id="" required style="display:none;"><%= b.body %></textarea><span class="bodySpan"><%= b.body %></span></div>
	  			</div>
			</div>

		<% end %>
	</div>
		<%= render 'home/new_blog_form' %>
</div>